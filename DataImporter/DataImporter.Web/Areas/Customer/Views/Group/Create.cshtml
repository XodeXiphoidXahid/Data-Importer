@model CreateGroupModel
@{
    ViewData["Title"] = "Create";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row form-horizontal justify-content-center">
            <div class="col-sm-3 ">
                <h1>Create A Group</h1>
            </div>
            <div class="col-sm-3">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">General Form</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row form-horizontal justify-content-center">
            <!-- left column -->
            <div class="col-lg-6 ">

                <!-- Horizontal Form -->
                <div class="card card-info ">
                    <div class="card-header">
                        <h3 class="card-title">Group Form</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-controller="Group" asp-action="Create" asp-antiforgery="true">
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label ">Group Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Name" id="name" placeholder="Group Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="CreateDate" class="col-sm-2 col-form-label">Create Date</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="CreateDate" class="form-control"
                                           id="createDate" placeholder="Create Date">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Create</button>
                            <a asp-action="Index" asp-controller="Attendance" class="btn btn-default float-right">Cancel</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->
        </div>
    </div>
</section>

