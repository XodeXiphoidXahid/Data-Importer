@model GroupListModel
@{
    ViewData["Title"] = "Index";
}

@section Styles
{
    <link rel="stylesheet" href="/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
}

@section Scripts
{
    <script src="/admin/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    
    <script>
        
        $(function () {

            var sDate, eDate;


            $('#startDate').daterangepicker({
                singleDatePicker: true,
            }, function (start, end, label) {
                    sDate = moment(start).format();
                    console.log(sDate);
            });

            $('#endDate').daterangepicker({
                singleDatePicker: true,
            }, function (start, end, label) {
                    eDate = moment(start).format();
                    console.log(eDate);
            });


            
            var cusTable = $('#customerz').DataTable({
                "processing": true,
                "serverSide": true,
                //"ajax": "/Customer/group/GetGroupData",
                "ajax": {
                    url: "/Customer/group/GetGroupData",
                    data: function (d) {
                        d.startDate = sDate;
                        d.endDate = eDate;
                        
                    }
                },

                
                
                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": 2,
                        "render": function (data, type, row) {
                            return `<button type="submit" class="btn btn-secondary btn-sm" onclick="window.location.href='/customer/group/edit/${data}'" value='${data}'>
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </button>
                                        <button type="submit" class="btn btn-danger btn-sm show-bs-modal" href="#" data-id='${data}' value='${data}'>
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </button>
                                        <button type="submit" class="btn btn-info btn-sm" onclick="window.location.href='/customer/group/ViewGroupData/${data}'" value='${data}'>
                                            <i class="fas fa-eye"></i>
                                            View
                                        </button>
                                        <button type="submit" class="btn btn-primary btn-sm" onclick="window.location.href='/customer/export/ExportAsExcel/${data}'" value='${data}'>
                                            <i class="fas fa-file-export"></i>
                                            Export
                                        </button>`;
                        }
                    }
                ]
            });

            $('#groups').on('click', '.show-bs-modal', function (event) {
                var id = $(this).data("id");
                var modal = $("#modal-default");
                modal.find('.modal-body p').text('Are you sure you want to delete this record?')
                $("#deleteId").val(id);
                $("#deleteForm").attr("action", "/customer/group/delete")
                modal.modal('show');
            });

            $("#deleteButton").click(function () {
                $("#deleteForm").submit();
            });

            $("#flt").click(function () {
                cusTable.draw();
            });
        });
    </script>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>List of Groups</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Groups</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">All Registered Groups</h3>
                    <a href="/customer/group/create" class="card-title  btn btn-navbar btn-danger btn-sm float-right"> <i class="fas fa-layer-group"></i><b> Add Group</b></a>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="form-group  col-3">

                            <label>Start Date:</label>
                            <input type="text" id="startDate" value="10/24/1984" />
                        </div>

                        <div class="form-group  col-3">
                            <label>End Date:</label>
                            <input type="text" id="endDate" value="10/24/1984" />

                        </div>
                        <div class="form-group  col-3">
                            <button id="flt"> Search</button>

                        </div>
                    </div>
                </div>



                <!-- /.card-header -->
                <div class="card-body">

                    <table id="customerz" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Create Date</th>
                                <th style="width:500px">Action</th>
                            </tr>
                        </thead>

                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Create Date</th>
                                <th style="width:500px">Action</th>
                            </tr>
                        </tfoot>
                    </table>
                    <partial name="_DeletePopupPartial" />
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->