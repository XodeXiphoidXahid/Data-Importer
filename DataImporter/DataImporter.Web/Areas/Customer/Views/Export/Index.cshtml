@model ExportHistoryModel
@{
    ViewData["Title"] = "Index";
}

@section Styles
{
    <link rel="stylesheet" href="/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

}

@section Scripts
{
    <script src="/admin/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>

    <script>

        $(function () {

            var sDate, eDate;

            $('#startDate').daterangepicker({
                singleDatePicker: true,
            }, function (start, end, label) {
                sDate = moment(start).format();
                console.log(sDate);
            });

            $('#endDate').daterangepicker({
                singleDatePicker: true,
            }, function (start, end, label) {
                eDate = moment(start).format();
                console.log(eDate);
            });


            var cusTable = $('#customerz').DataTable({
                "processing": true,
                "serverSide": true,
                //"ajax": "/Customer/group/GetGroupData",
                "ajax": {
                    url: "/Customer/export/GetExportHistory",
                    data: function (d) {
                        d.startDate = sDate;
                        d.endDate = eDate;

                    }
                },

                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": 3,
                        "render": function (data, type, row) {
                            return `<button type="submit" class="btn btn-secondary btn-sm" onclick="window.location.href='/customer/export/DownloadFile/${data}'" value='${data}'>
                                                <i class="fal fa-inbox-in"></i>
                                                Download
                                            </button>`;


                        }
                    }
                ]
            });
            $("#flt").click(function () {
                if (sDate > eDate) {
                    alert("Start Date")
                    console.log(sDate);
                }
                else {
                    cusTable.draw();
                }

            });
        });



    </script>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>List of Exports</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Exports</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="container">
                        <div class="row">
                            <div class="form-group  col-3">

                                <label>Start Date:</label>
                                <input type="text" id="startDate" value="10/20/2021" />
                            </div>

                            <div class="form-group  col-3">
                                <label>End Date:</label>
                                <input type="text" id="endDate" value="12/15/2021" />

                            </div>
                            <div class="form-group  col-3">
                                <button id="flt"> Search</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Date -->
                <!-- /.card-header -->
                <div class="card-body">

                    <table id="customerz" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Group Name</th>
                                <th>Export Date</th>
                                <th>Status</th>
                                <th style="width:500px">Action</th>
                            </tr>
                        </thead>

                        <tfoot>
                            <tr>
                                <th>Group Name</th>
                                <th>Import Date</th>
                                <th>Status</th>
                                <th style="width:500px">Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->